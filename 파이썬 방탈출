  <script>
    // ê³µí†µ íŒíŠ¸ ë²„íŠ¼ ë¡œì§
    function setupHintButtons() {
      const buttons = document.querySelectorAll(".hint-btn");
      buttons.forEach((btn) => {
        btn.dataset.clicks = "0";
        btn.addEventListener("click", () => {
          let clicks = Number(btn.dataset.clicks || "0") + 1;
          btn.dataset.clicks = String(clicks);
          const out = btn.nextElementSibling;
          if (!out || !out.classList.contains("hint-output")) return;

          out.textContent = "";
          if (clicks === 1) {
            // ì²« í´ë¦­ â†’ íŒíŠ¸
            btn.textContent = "ì •ë‹µ ë³´ê¸°";
            btn.classList.add("hint-level1");
            const hint = btn.dataset.hint || "íŒíŠ¸ê°€ ì¤€ë¹„ë˜ì§€ ì•Šì•˜ì–´ìš”.";
            out.textContent = "ğŸ’¡ íŒíŠ¸: " + hint;
          } else {
            // ë‘ ë²ˆì§¸ ì´í›„ â†’ ì •ë‹µ
            btn.textContent = "ë‹¤ ë´¤ì–´ìš”!";
            btn.classList.remove("hint-level1");
            btn.classList.add("hint-level2");
            const answer = btn.dataset.answer || "ì •ë‹µ ì˜ˆì‹œëŠ” êµì‚¬ìš© ë…¸íŠ¸ë¶ì„ ì°¸ê³ í•˜ì„¸ìš”.";
            out.textContent = "âœ… ì •ë‹µ ì˜ˆì‹œ ì½”ë“œ:\n\n" + answer;
          }
        });
      });
    }

    // Stage 2 ëœë¤ ë¬¸ì œ
    function setupStage2() {
      const questions = [
        {
          question: 'ë¬¸ì œ) ë¬¸ìì—´ì´ "CODE"ë¡œ ì‹œì‘í•˜ëŠ”ì§€ í™•ì¸í•´ë³´ì„¸ìš”.\n\ntext = "CODE2025!"',
          starter: "import re\ntext = \"CODE2025!\"",
          hint: "ì´ ë¬¸ì œëŠ” re.matchë¥¼ í™œìš©í•´ì„œ í’€ ìˆ˜ ìˆì–´ìš”. (ë¬¸ì¥ì´ CODEë¡œ ì‹œì‘í•˜ëŠ”ì§€ í™•ì¸!)",
          answer: 'import re\ntext = "CODE2025!"\nresult = re.match(r"CODE", text)\nprint(result)'
        },
        {
          question: 'ë¬¸ì œ) ë¬¸ì¥ ì•ˆì— "2025"ë¼ëŠ” ìˆ«ìê°€ ë“¤ì–´ìˆëŠ”ì§€ ì°¾ì•„ë³´ì„¸ìš”.\n\ntext = "íƒˆì¶œì½”ë“œëŠ” 2025ë…„ì— ê³µê°œëœë‹¤!"',
          starter: "import re\ntext = \"íƒˆì¶œì½”ë“œëŠ” 2025ë…„ì— ê³µê°œëœë‹¤!\"",
          hint: "ì´ ë¬¸ì œëŠ” re.searchë¥¼ í™œìš©í•´ì„œ í’€ ìˆ˜ ìˆì–´ìš”.",
          answer: 'import re\ntext = "íƒˆì¶œì½”ë“œëŠ” 2025ë…„ì— ê³µê°œëœë‹¤!"\nresult = re.search(r"2025", text)\nprint(result)'
        },
        {
          question: 'ë¬¸ì œ) ë¬¸ì¥ ì•ˆì—ì„œ "ì˜ì–´ëŒ€ë¬¸ì + ìˆ«ì 2ìë¦¬"ì¸ íŒ¨í„´ì„ ëª¨ë‘ ì°¾ì•„ë³´ì„¸ìš”.\n\ntext = "ID: A12, B07, C99"',
